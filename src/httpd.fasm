        mov       r1, 13                               ;
        strb      r1, [r10],1                          ;
        mov       r1, 10                               ;
        strb      r1, [r10],1                          ;
        mov       r1, 13                               ;
        strb      r1, [r10],1                          ;
        mov       r1, 10                               ;
        strb      r1, [r10],1                          ;
                                                       ;
        imm32     r1, c_l                              ;
