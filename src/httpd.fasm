        str       r0, [r5]                             ;
        mov       r7, 5                                ;
        imm32     r0, bufferwantedfile                 ;
        mov       r1 ,0                                ;
        mov       r2 ,0                                ;
        swi       0x0                                  ;
        teq       r0, 0                                ; check for errors
