close:                                                 ;
        mov       r7, 6                                ;
        imm32     r0, fd                               ;
        ldr       r0, [r0]                             ;
        swi       0x0                                  ;
        mov       r7, 6                                ; CLOSE(2)
        imm32     r0, clientfd                         ;
        ldr       r0, [r0]                             ;
        swi       0x0                                  ;
        imm32     r0,buffer                            ;
        eor       r1,r1                                ;
        imm32     r2,bufferlen                         ;
        mov       r2,r2, lsr 2                         ;
align 4                                                ;
ClearBuffLoop:                                         ;
        str       r1,[r0],4                            ;
        subs      r2,r2,1                              ;
        bne       ClearBuffLoop                        ;
        b         infinity                             ;
align 4                                                ;
