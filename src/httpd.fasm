macro tcpsend_reg _msg                                 ;
{ common                                               ;
        push      (r0)                                 ;
        push      (r1)                                 ;
        push      (r2)                                 ;
        push      (r3)                                 ;
        push      (r7)                                 ;
        mov       r2, r0                               ;
        imm32     r0, clientfd                         ;
        ldr       r0, [r0]                             ;
        imm32     r1, _msg                             ;
        mov       r3, 0                                ;
        imm32     r7, 0x121                            ;
        swi       0x0                                  ;
        pop       (r7)                                 ;
        pop       (r3)                                 ;
        pop       (r2)                                 ;
        pop       (r1)                                 ;
        pop       (r0)                                 ;
}                                                      ;
;======================================================;
; Print macro                                          ;
;------------------------------------------------------;
;  r0 = string size                                    ;
;------------------------------------------------------;
macro print_reg _msg,_msglen                           ;
{ common                                               ;
        push      (r0)                                 ;
        push      (r1)                                 ;
        push      (r2)                                 ;
        push      (r7)                                 ;
        mov       r2, r0                               ;
        mov       r7, 0x4                              ;
        mov       r0, 0x1                              ;
        imm32     r1, _msg                             ;
        swi       0x0                                  ;
                                                       ;
        pop       (r7)                                 ;
        pop       (r2)                                 ;
        pop       (r1)                                 ;
        pop       (r0)                                 ;
}                                                      ;
